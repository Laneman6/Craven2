<div class="page-header">
  <h1>
    Options
    <a href="/options/new" class="btn btn-lg btn-success">New Option</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Plan</th>
        <th>Title</th>
        <th>Description</th>
        <th>Recipe</th>
        <th>Image</th>
        <th>Source link</th>
        <th>Difficulty</th>
        <th>Actions</th>
      </tr>

      <% @options.each do |option| %>
      <tr>
        <td><%= option.plan_id %></td>
        <td><%= option.title %></td>
        <td><%= option.description %></td>
        <td><%= option.recipe %></td>
        <td><%= option.image %></td>
        <td><%= option.source_link %></td>
        <td><%= option.difficulty %></td>
        <td>
          <a href="/options/<%= option.id %>" class="btn btn-primary">Show</a>
          <a href="/options/<%= option.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_option/<%= option.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
